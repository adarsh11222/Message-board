<div class="col-md-8 col-md-offset-2">
<h2><%= @message.title %></h2>

<p><%= @message.description %></p>
<h3>Comments</h3>
<%= render @message.comments %>
<h3>Reply to message</h3>
<%= render 'comments/form' %>
<% if user_signed_in? %>
<% if @message.user_id == current_user.id %>

<%= link_to 'Edit Message', edit_message_path(@message), class:"btn btn-secondary" %>
<%= link_to "Delete Message", message_path(@message), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class:"btn btn-danger" %>
<% end %>
<% end %>
</div>