<p><%= comment.content %></p>

<% if user_signed_in? %>
    <% if comment.user_id == current_user.id %>
        <%= link_to 'Edit', edit_message_comment_path(comment.message, comment), class:"btn btn-secondary" %>
        <%= link_to "Delete", message_comment_path(comment.message, comment), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class:"btn btn-danger" %>
    <% end %>
<% end %>
